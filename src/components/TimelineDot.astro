---
interface Props {
    isLatest: boolean;
    isMobile?: boolean;
}

const { isLatest, isMobile = false } = Astro.props;
---

<div
    class:list={[
        "w-4 h-4 border-2",
        isLatest
            ? "bg-[var(--dinosaur-color)] border-gray-800 dark:border-neutral-200"
            : "bg-gray-800 dark:bg-neutral-200 border-gray-600 dark:border-neutral-500",
        isMobile ? "absolute left-2" : "z-10",
    ]}
>
</div>
