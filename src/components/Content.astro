---
import ContentLink from "./ContentLink.astro";

interface ContentItem {
    title: string;
    href: string;
    date: string;
}

const writtenWork: ContentItem[] = [
    {
        title: "Building Modern Web Applications",
        href: "https://example.com/article-1",
        date: "2024-01-15",
    },
    {
        title: "The Future of Frontend Development",
        href: "https://example.com/article-2",
        date: "2024-01-10",
    },
    {
        title: "Best Practices for API Design",
        href: "https://example.com/article-3",
        date: "2023-12-20",
    },
    {
        title: "Understanding JavaScript Frameworks",
        href: "https://example.com/article-4",
        date: "2023-12-15",
    },
    {
        title: "Developer Advocacy in Tech",
        href: "https://example.com/article-5",
        date: "2023-12-01",
    },
];

const videos: ContentItem[] = [
    {
        title: "Introduction to Modern JavaScript",
        href: "https://youtube.com/watch?v=example1",
        date: "2024-01-20",
    },
    {
        title: "Building Your First API",
        href: "https://youtube.com/watch?v=example2",
        date: "2024-01-12",
    },
    {
        title: "CSS Grid and Flexbox Tutorial",
        href: "https://youtube.com/watch?v=example3",
        date: "2023-12-25",
    },
    {
        title: "React vs Vue vs Angular",
        href: "https://youtube.com/watch?v=example4",
        date: "2023-12-18",
    },
    {
        title: "DevOps for Frontend Developers",
        href: "https://youtube.com/watch?v=example5",
        date: "2023-12-05",
    },
];
---

<main class="min-h-screen flex flex-col flex-auto">
    <div
        class="flex flex-col md:justify-center md:items-center justify-start grow pt-4 px-6 md:px-0"
    >
        <h1 class="text-4xl text-center mb-8">Stuff I made</h1>

        <div
            class="w-full max-w-6xl grid grid-cols-1 md:grid-cols-2 gap-8 md:gap-16"
        >
            <!-- Written Work Column -->
            <div class="flex flex-col">
                <h2 class="text-2xl text-center mb-6">Writing</h2>
                <div class="flex flex-col gap-4">
                    {
                        writtenWork.map((item) => (
                            <ContentLink
                                title={item.title}
                                href={item.href}
                                date={item.date}
                            />
                        ))
                    }
                </div>
            </div>

            <!-- Videos Column -->
            <div class="flex flex-col">
                <h2 class="text-2xl text-center mb-6">Videos</h2>
                <div class="flex flex-col gap-4">
                    {
                        videos.map((item) => (
                            <ContentLink
                                title={item.title}
                                href={item.href}
                                date={item.date}
                            />
                        ))
                    }
                </div>
            </div>
        </div>
    </div>
</main>
