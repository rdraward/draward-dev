---
import "../styles/pixel-corners.css";

interface ContentItem {
    title: string;
    href: string;
    date: string;
}

const writtenWork: ContentItem[] = [
    {
        title: "Building Modern Web Applications",
        href: "https://example.com/article-1",
        date: "2024-01-15",
    },
    {
        title: "The Future of Frontend Development",
        href: "https://example.com/article-2",
        date: "2024-01-10",
    },
    {
        title: "Best Practices for API Design",
        href: "https://example.com/article-3",
        date: "2023-12-20",
    },
    {
        title: "Understanding JavaScript Frameworks",
        href: "https://example.com/article-4",
        date: "2023-12-15",
    },
    {
        title: "Developer Advocacy in Tech",
        href: "https://example.com/article-5",
        date: "2023-12-01",
    },
];
---

<main class="min-h-screen flex flex-col">
    <h1 class="text-4xl text-center py-8">Stuff I made</h1>

    <div class="flex-1 flex relative">
        <div class="flex-1 p-6 pl-80">
            <div class="max-h-96 overflow-y-auto">
                <table class="w-full">
                    <thead class="sticky top-0 bg-neutral-800">
                        <tr>
                            <th
                                class="text-left p-4 text-lg font-medium text-neutral-100"
                                >Writing</th
                            >
                            <th
                                class="text-right p-4 text-lg font-medium text-neutral-100"
                                >Date</th
                            >
                        </tr>
                    </thead>
                    <tbody>
                        {
                            writtenWork.map((item) => (
                                <tr class="border-b border-neutral-700 hover:bg-neutral-700 transition-colors">
                                    <td class="p-4">
                                        <a
                                            href={item.href}
                                            target="_blank"
                                            class="text-neutral-100 hover:text-neutral-300 transition-colors font-medium"
                                        >
                                            {item.title}
                                        </a>
                                    </td>
                                    <td class="p-4 text-right text-neutral-300 text-sm">
                                        {item.date}
                                    </td>
                                </tr>
                            ))
                        }
                    </tbody>
                </table>
            </div>
        </div>

        <!-- Fixed Video Square (Left) -->
        <div class="fixed top-32 left-6 w-64 h-64">
            <a
                class="w-full h-full text-neutral-100 hover:text-neutral-300 transition-colors duration-200 bg-neutral-600 pixel-corners p-6 flex flex-col items-center justify-center text-center"
                href="https://youtube.com/@yourchannel"
                target="_blank"
                aria-label="YouTube Channel"
            >
                <div class="text-xl font-medium mb-4">Videos</div>
                <div class="text-lg font-medium">Visit my YouTube Channel</div>
                <div class="text-sm text-neutral-300 mt-2">
                    Watch all my videos
                </div>
            </a>
        </div>
    </div>
</main>
