---
import "../styles/pixel-corners.css";
import { Image } from "astro:assets";
import JobCard from "./JobCard.astro";
import GadgetLogo from "../assets/logos/gadget.png";
import HomeIcon from "../assets/icons/home.svg";

interface ContentItem {
    title: string;
    href: string;
    date: string;
}

const writtenWork: ContentItem[] = [
    {
        title: "Building Modern Web Applications",
        href: "https://example.com/article-1",
        date: "2024-01-15",
    },
    {
        title: "The Future of Frontend Development",
        href: "https://example.com/article-2",
        date: "2024-01-10",
    },
    {
        title: "Best Practices for API Design",
        href: "https://example.com/article-3",
        date: "2023-12-20",
    },
    {
        title: "Understanding JavaScript Frameworks",
        href: "https://example.com/article-4",
        date: "2023-12-15",
    },
    {
        title: "Developer Advocacy in Tech",
        href: "https://example.com/article-5",
        date: "2023-12-01",
    },
];
---

<main class="min-h-screen flex flex-col p-16">
    <div class="flex flex-col items-center pb-12">
        <h1 class="text-4xl p-4">Stuff I've made :)</h1>
        <a
            href="/"
            class="text-neutral-100 hover:text-neutral-300 transition-colors"
        >
            <Image src={HomeIcon} alt="Home" class="w-6 h-6 text-neutral-100" />
        </a>
    </div>
    <div class="flex relative gap-8">
        <div>
            <h2 class="text-xl font-semibold p-4 text-center">Videos</h2>
            <div class="w-48 h-48">
                <JobCard
                    title="Tutorials & Demos"
                    company="Gadget"
                    logo={GadgetLogo}
                    url="https://www.youtube.com/@gadget_dev"
                />
            </div>
        </div>
        <div class="flex-1">
            <div class="max-h-96 overflow-y-auto">
                <table class="w-full">
                    <thead class="bg-neutral-300">
                        <tr>
                            <th
                                class="text-left p-4 text-xl font-semibold text-neutral-900"
                                >Writing</th
                            >
                            <th
                                class="text-right p-4 text-lg font-semibold text-neutral-900"
                                >Date</th
                            >
                        </tr>
                    </thead>
                    <tbody>
                        {
                            writtenWork.map((item) => (
                                <tr class="border-b border-neutral-700 hover:bg-slate-600 transition-colors">
                                    <td colspan="2">
                                        <a
                                            href={item.href}
                                            target="_blank"
                                            class="p-4 flex justify-between w-full text-neutral-100 hover:text-neutral-300 transition-colors font-medium"
                                        >
                                            <span>{item.title}</span>
                                            <span class="text-right text-neutral-300 text-sm">
                                                {item.date}
                                            </span>
                                        </a>
                                    </td>
                                </tr>
                            ))
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</main>
